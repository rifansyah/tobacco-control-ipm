<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:background="@color/white"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".ReportTakePhotoFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

            <TextView
                    style="@style/TabLayoutReport"
                    android:textColor="@color/colorPrimary"
                    android:text="1. Ambil foto"/>

            <TextView
                    style="@style/TabLayoutReport"
                    android:text="2. Tulis deskripsi"/>

            <TextView
                    style="@style/TabLayoutReport"
                    android:text="3. Review"/>

        </LinearLayout>

        <FrameLayout
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <io.fotoapparat.view.CameraView
                    android:id="@+id/camera_view"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">

                <!--Optionally add tap to focus-->
                <io.fotoapparat.view.FocusView
                        android:id="@+id/focusView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


            </io.fotoapparat.view.CameraView>

        </FrameLayout>

        <SeekBar
                android:id="@+id/sb_zoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/iv_flash"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flash"/>

            <ImageView
                    android:id="@+id/iv_takephoto"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_camera"/>

            <ImageView
                    android:id="@+id/iv_gallery"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gallery"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>